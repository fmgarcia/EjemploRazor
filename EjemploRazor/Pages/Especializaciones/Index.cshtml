@page
@model EjemploRazor.Pages.Especializaciones.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class= "col-1">
                @Html.DisplayNameFor(model => model.Especializacion[0].name)
            </th>
            <th class= "col-1">
                @Html.DisplayNameFor(model => model.Especializacion[0].profession)
            </th>
            <th class= "col-1">
                @Html.DisplayNameFor(model => model.Especializacion[0].elite)
            </th>
            <th class= "col-3">
                @Html.DisplayNameFor(model => model.Especializacion[0].icon)
            </th>
            <th class= "col-3">
                @Html.DisplayNameFor(model => model.Especializacion[0].background)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Especializacion) {
        <tr>
            <td class= "col-1">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td class= "col-1">
                @Html.DisplayFor(modelItem => item.profession)
            </td>
            <td class= "col-1">
                @Html.DisplayFor(modelItem => item.elite)
            </td>
            <td class= "col-3">
                <img src="@Html.DisplayFor(modelItem => item.icon)" width="100" height="100" alt="Icono Especialización">               
            </td>
            <td class= "col-3">
                <img src="@Html.DisplayFor(modelItem => item.background)" width="200" height="100" alt="Background Especialización">                
            </td>
            <td class= "col-3">
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model EjemploRazor.Pages.Movies.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>Índice de películas</h1>

<p>
	<a asp-page="Create">Nueva Película</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Título
			</th>
			<th>
				Fecha
			</th>
			<th>
				Género
			</th>
			<th>
				Precio
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Movie)
		{
				<tr>
					<td>
					@Html.DisplayFor(modelItem => item.Title)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.ReleaseDate)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Genre)
					</td>
					<td>
					@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						<a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
						<a asp-page="./Details" asp-route-id="@item.ID">Mostrar</a> |
						<a asp-page="./Delete" asp-route-id="@item.ID">Borrar</a>
					</td>
				</tr>
		}
	</tbody>
</table>
